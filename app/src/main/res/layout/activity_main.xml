<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#203338"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--android:background="#664F8D"-->

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_A"
            android:layout_weight="1"
            android:text="Step length"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:textColor="#F5ABAB"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_B"
            android:layout_weight="1"
            android:text="Step number"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:textColor="#F5ABAB"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_C"
            android:layout_weight="1"
            android:text="Distance"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:textColor="#F5ABAB"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_length"
            android:layout_weight="1"
            android:text="0.0 m"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:textColor="#F3E4E4"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_steps"
            android:layout_weight="1"
            android:text="0"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:textColor="#F3E4E4"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_Distance"
            android:layout_weight="1"
            android:text="0.0 m"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:textColor="#F3E4E4"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#EE77B8"
            android:textSize="18dp"
            android:text="Direction"
            android:textStyle="bold"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/Rssi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#20ee0d"
            android:textSize="18dp"
            android:text="Intensity"
            android:textStyle="bold"
            android:layout_weight="1"/>
        

    </LinearLayout>

    <android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="386dp">

        <ImageView
            android:id="@+id/map"
            android:layout_width="377dp"
            android:layout_height="294dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.105"
            app:srcCompat="@drawable/map_g2_new_bigger"
            tools:layout_editor_absoluteX="18dp" />

        <ImageView
            android:id="@+id/Arrow"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/compass_small"
            app:layout_constraintBottom_toBottomOf="@+id/map"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.977"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.029" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button

            android:id="@+id/btn_start"
            android:layout_width="128dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#A27B8F"
            android:text="Start"
            android:textColor="#F7F2F2"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_stop"
            android:layout_width="128dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#336397"
            android:text="Stop"
            android:textColor="#F5F0F0"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_Reset"
            android:layout_width="128dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#00BCD4"
            android:text="Reset"
            android:textColor="#F8F6F6"
            android:textSize="20dp"
            android:textStyle="bold" />
<!--        <Button-->
<!--            android:id="@+id/btn_Test"-->
<!--            android:layout_width="128dp"-->
<!--            android:layout_height="60dp"-->
<!--            android:layout_weight="1"-->
<!--            android:background="#d4c63b"-->
<!--            android:text="Test"-->
<!--            android:textColor="#f8f3f3"-->
<!--            android:textSize="20dp"-->
<!--            android:textStyle="bold" />-->



    </LinearLayout>


    <!--<ImageView-->
        <!--android:id="@+id/map"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="578dp"-->
        <!--android:layout_gravity="center"-->
        <!--android:src="@drawable/mapp" />-->


</LinearLayout>
